{% extends "base.html.twig" %}
{% block title %}{% endblock %}
{% block body %}
<div class="container text-center">
    <div class="row flex">
        {% for property in properties %}
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <a href="{{
                            path("property.show", { id: property.id, slug: property.slug })
                          }}">{{ property.title }}</a>
                    </div>
                    <p class="card-text">{{ property.city }}</p>
                    <p style="font-size: 2rem; font-weight: bold;">{{ property.getFormattedPrice }} â‚¬</p>
                </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
