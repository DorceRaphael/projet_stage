<div class="card">
    <div class="card-body">
        <div class="card-title" style="text-transform: uppercase;">
            <a href="{{path("property.show", { id: property.id, slug: property.slug }) }}">{{ property.title }}</a>
        </div>
        <p class="card-text">{{ property.city }}</p>
        <p style="font-size: 2rem; font-weight: bold;">{{ property.getFormattedPrice }} â‚¬</p>
        {% if property.filename == null %}
        <img class="property-img" src="https://previews.123rf.com/images/iimages/iimages1205/iimages120500876/13732734-illustration-a-simple-house-front-view.jpg" alt="">
        {% else %}
        <img class="property-img" src="{{ vich_uploader_asset(property, "imageFile") }}" alt="">
        {% endif %}
    </div>
</div>
